                        if (entornoActual.buscar(id) != null) {
                            System.err.println("Error semantico: la variable '" + id + "' ya fue declarada. Fila: " + idleft + ", Columna: " + idright);

                        } else if (!tipo.equals(exp.tipoDato)) {
